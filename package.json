{
  "name": "minecraft-java-finder",
  "version": "1.0.0",
  "description": "Application for determining the appropriate Java version for Minecraft",
  "main": "./dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "dev": "tsc -w",
    "prebuild": "tsc && node -e \"const fs=require('fs'); const path=require('path'); if(!fs.existsSync('dist/styles')) fs.mkdirSync('dist/styles', {recursive:true}); fs.cpSync('styles', 'dist/styles', {recursive:true}); if(!fs.existsSync('dist/locales')) fs.mkdirSync('dist/locales', {recursive:true}); fs.cpSync('locales', 'dist/locales', {recursive:true}); fs.copyFileSync('index.html', 'dist/index.html');\" ",
    "build": "npm run prebuild && electron-builder",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/minecraft-java-finder.git"
  },
  "keywords": [
    "minecraft",
    "java",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "i18next": "^23.7.6",
    "i18next-electron-language-detector": "^0.0.10",
    "systeminformation": "^5.21.17"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.3.2"
  },
  "build": {
    "appId": "com.minecraft-java-finder",
    "productName": "Minecraft Java Finder",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "locales/**/*",
      "index.html",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}