{
  "name": "jsr",
  "version": "1.0.0",
  "description": "Application for determining the appropriate Java version for Minecraft",
  "main": "./dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "dev": "tsc -w",
    "prebuild": "tsc && node -e \"const fs=require('fs'); const path=require('path'); if(!fs.existsSync('dist/styles')) fs.mkdirSync('dist/styles', {recursive:true}); fs.cpSync('styles', 'dist/styles', {recursive:true}); if(!fs.existsSync('dist/locales')) fs.mkdirSync('dist/locales', {recursive:true}); fs.cpSync('locales', 'dist/locales', {recursive:true}); if(!fs.existsSync('dist/assets')) fs.mkdirSync('dist/assets', {recursive:true}); fs.cpSync('assets', 'dist/assets', {recursive:true}); fs.copyFileSync('index.html', 'dist/index.html');\" ",
    "build": "npm run prebuild && electron-builder",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "release": "npm run prebuild && electron-builder --publish always",
    "release:win": "npm run prebuild && electron-builder --win --publish always",
    "release:mac": "npm run prebuild && electron-builder --mac --publish always",
    "release:linux": "npm run prebuild && electron-builder --linux --publish always",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "version-major": "npm version major",
    "build-installer": "tsc && node build-installer.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BANSAFAn/JSR.git"
  },
  "keywords": [
    "minecraft",
    "java",
    "electron"
  ],
  "author": {
    "name": "Baner",
    "email": "baneronetwo@memeware.net"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "i18next": "^23.7.6",
    "i18next-electron-language-detector": "^0.0.10",
    "systeminformation": "^5.21.17"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "electron-wix-msi": "^5.0.0",
    "typescript": "^5.3.2"
  },
  "build": {
    "appId": "com.bansafan.jsr",
    "productName": "JSR",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "locales/**/*",
      "styles/**/*",
      "index.html",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "compression": "maximum",
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "portable"
      ],
      "icon": "assets/images/Logo.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JSR",
      "license": "LICENSE",
      "installerIcon": "assets/images/AppIcon.ico",
      "uninstallerIcon": "assets/images/AppIcon.ico",
      "installerHeaderIcon": "assets/images/AppIcon.ico",
      "installerSidebar": "assets/images/installer-sidebar.png",
      "uninstallerSidebar": "assets/images/installer-sidebar.png",
      "allowElevation": true,
      "runAfterFinish": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": true,
      "menuCategory": true,
      "multiLanguageInstaller": true,
      "installerLanguages": ["en", "ru", "uk", "de"],
      "include": "assets/nsis-translations.nsh",
      "perMachine": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "BANSAFAn",
        "repo": "JSR",
        "releaseType": "release",
        "vPrefixedTagName": true,
        "publishAutoUpdate": true
      }
    ]
  }
}